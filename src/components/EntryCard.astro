---
interface Props {
  entry: {
    id: number;
    title: string;
    category: string;
    tags: string;
    problem: string;
    solution: string;
    why: string | null;
    gotchas: string;
    language: string | null;
    framework: string | null;
    severity: string;
    environment: string;
    error_messages: string;
    version_info: string | null;
  };
}

const { entry } = Astro.props;

const tags: string[] = (() => {
  try { return JSON.parse(entry.tags); }
  catch { return []; }
})();

const gotchas: string[] = (() => {
  try { return JSON.parse(entry.gotchas); }
  catch { return []; }
})();

const errorMessages: string[] = (() => {
  try { return JSON.parse(entry.error_messages || '[]'); }
  catch { return []; }
})();

const environments: string[] = (() => {
  try { return JSON.parse(entry.environment || '[]'); }
  catch { return []; }
})();

const categoryClass = entry.category.toLowerCase();
const severity = entry.severity || 'minor';
---

<article class="card">
  <div class="card-header">
    <div class="card-badges">
      <span class={`category-badge ${categoryClass}`}>{entry.category}</span>
      {entry.language && (
        <span class="lang-badge">{entry.language}</span>
      )}
      {entry.framework && (
        <span class="framework-badge">{entry.framework}</span>
      )}
      <span class={`severity-dot severity-${severity}`} title={severity}></span>
    </div>
    <h3 class="card-title">
      <a href={`/entry/${entry.id}`}>{entry.title}</a>
    </h3>
  </div>

  <p class="card-problem">{entry.problem}</p>

  {errorMessages.length > 0 && (
    <div class="card-error-preview">
      <code>{errorMessages[0]}</code>
    </div>
  )}

  {tags.length > 0 && (
    <div class="card-tags">
      {tags.map((t) => <span class="tag">{t}</span>)}
    </div>
  )}

  {entry.version_info && (
    <p class="version-info">{entry.version_info}</p>
  )}

  <details class="card-details">
    <summary class="details-toggle">Show details</summary>
    <div class="details-content">
      {entry.solution && (
        <div class="detail-section">
          <h4>Solution</h4>
          <p>{entry.solution}</p>
        </div>
      )}
      {entry.why && (
        <div class="detail-section">
          <h4>Why?</h4>
          <p>{entry.why}</p>
        </div>
      )}
      {gotchas.length > 0 && (
        <div class="detail-section">
          <h4>Gotchas</h4>
          <ul>
            {gotchas.map((g) => <li>{g}</li>)}
          </ul>
        </div>
      )}
      {environments.length > 0 && (
        <div class="detail-section">
          <h4>Environment</h4>
          <div class="env-pills">
            {environments.map((env) => <span class="env-pill">{env}</span>)}
          </div>
        </div>
      )}
    </div>
  </details>
</article>

<style>
  .card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 20px;
    transition: all var(--transition);
  }

  .card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-hover);
    box-shadow: var(--shadow);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 10px;
    flex-wrap: wrap;
  }

  .card-badges {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-shrink: 0;
  }

  .lang-badge {
    display: inline-block;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    font-family: var(--font-mono);
    background: rgba(78, 205, 196, 0.15);
    color: #5eddd4;
  }

  .framework-badge {
    display: inline-block;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    font-family: var(--font-mono);
    background: rgba(255, 140, 0, 0.15);
    color: #ffaa44;
  }

  .severity-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .severity-critical { background: #ff4444; box-shadow: 0 0 6px rgba(255, 68, 68, 0.5); }
  .severity-major { background: #ff8c00; box-shadow: 0 0 6px rgba(255, 140, 0, 0.4); }
  .severity-moderate { background: #ffd93d; }
  .severity-minor { background: #4ecdc4; }
  .severity-tip { background: #7c5cbf; }

  .card-title {
    font-size: 1.05rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .card-title a {
    color: var(--text-primary);
  }

  .card-title a:hover {
    color: var(--accent-hover);
  }

  .card-problem {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 12px;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-error-preview {
    margin-bottom: 12px;
    padding: 6px 10px;
    background: rgba(20, 10, 10, 0.6);
    border-left: 3px solid rgba(255, 68, 68, 0.5);
    border-radius: 4px;
  }

  .card-error-preview code {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: #f0a0a0;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 12px;
  }

  .version-info {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-family: var(--font-mono);
    margin-bottom: 8px;
  }

  .card-details {
    border-top: 1px solid var(--border);
    margin-top: 8px;
  }

  .details-toggle {
    padding: 10px 0 0;
    cursor: pointer;
    color: var(--text-muted);
    font-size: 0.8rem;
    list-style: none;
    transition: color var(--transition);
  }

  .details-toggle::-webkit-details-marker {
    display: none;
  }

  .details-toggle:hover {
    color: var(--accent-hover);
  }

  .details-content {
    padding-top: 14px;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .detail-section h4 {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--accent-hover);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 6px;
  }

  .detail-section p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .detail-section ul {
    list-style: none;
    padding: 0;
  }

  .detail-section li {
    color: var(--text-secondary);
    font-size: 0.875rem;
    padding: 4px 0;
    padding-left: 16px;
    position: relative;
  }

  .detail-section li::before {
    content: '!';
    position: absolute;
    left: 0;
    color: var(--category-gotcha);
    font-weight: 700;
    font-size: 0.8rem;
  }

  .env-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .env-pill {
    display: inline-block;
    padding: 2px 8px;
    background: rgba(124, 92, 191, 0.12);
    color: var(--text-muted);
    border-radius: 4px;
    font-size: 0.7rem;
    font-family: var(--font-mono);
  }
</style>
