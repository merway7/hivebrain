---
interface Props {
  total: number;
  byCategory: { name: string; count: number }[];
  languageCounts?: Record<string, number>;
  severityCounts?: Record<string, number>;
  recentCount?: number;
  monthlyEntries?: number;
  weeklyDelta?: number;
}

const { total, byCategory, severityCounts = {}, recentCount = 0, monthlyEntries = 0, weeklyDelta = 0 } = Astro.props;

const topCategory = byCategory.length > 0
  ? byCategory.reduce((a, b) => a.count > b.count ? a : b)
  : null;

const topCatPct = topCategory && total > 0
  ? Math.round((topCategory.count / total) * 100)
  : 0;

const sevLow = severityCounts['low'] || severityCounts['tip'] || severityCounts['minor'] || 0;
const sevMed = severityCounts['medium'] || severityCounts['moderate'] || 0;
const sevHigh = (severityCounts['high'] || 0) + (severityCounts['critical'] || severityCounts['major'] || 0);
const sevTotal = sevLow + sevMed + sevHigh;
const medOrAbovePct = sevTotal > 0 ? Math.round(((sevMed + sevHigh) / sevTotal) * 100) : 0;

const dominantSev = sevHigh >= sevMed && sevHigh >= sevLow ? 'high'
  : sevMed >= sevLow ? 'med' : 'low';
const sevColor = dominantSev === 'high' ? 'var(--red)' : dominantSev === 'med' ? 'var(--amber)' : 'var(--green)';
---

<div class="stats-row">
  <div class="stat-card">
    <div class="stat-label">Total Entries</div>
    <div class="stat-value">{total}</div>
    <div class="stat-sub"><span class="up">+{monthlyEntries}</span> this month</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">This Week</div>
    <div class="stat-value">{recentCount}</div>
    <div class="stat-sub"><span class={weeklyDelta >= 0 ? 'up' : 'down'}>{weeklyDelta >= 0 ? '+' : ''}{weeklyDelta}</span> vs last week</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">Top Category</div>
    <div class="stat-value" style="font-size: 22px;">{topCategory?.name || 'â€”'}</div>
    <div class="stat-sub">{topCategory ? `${topCategory.count} entries (${topCatPct}%)` : 'no data'}</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">Avg Severity</div>
    <div class="stat-value" style={`color: ${sevColor};`}>{dominantSev}</div>
    <div class="stat-sub">{medOrAbovePct}% medium or above</div>
  </div>
</div>

<style is:global>
  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    margin-bottom: 24px;
  }

  .stat-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 18px 20px;
    transition: border-color 0.15s ease;
  }

  .stat-card:hover {
    border-color: var(--border-hover);
  }

  .stat-label {
    font-size: 12px;
    color: var(--text-muted);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    font-weight: 500;
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 28px;
    font-weight: 600;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    line-height: 1;
  }

  .stat-sub {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-muted);
    margin-top: 6px;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .stat-sub .up {
    color: var(--green);
  }

  .stat-sub .down {
    color: var(--red);
  }

  @media (max-width: 900px) {
    .stats-row { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 520px) {
    .stats-row { grid-template-columns: 1fr; }
  }
</style>
